				            <id>com.ibm.icu.text</id>
				            <restrictTo>
				               <type>eclipse-plugin</type>
				               <id>com.ibm.icu</id>
				            </restrictTo>
				        </filter>
				        <filter>
				            <type>java-package</type>
				            <id>com.ibm.icu.util</id>
				            <restrictTo>
