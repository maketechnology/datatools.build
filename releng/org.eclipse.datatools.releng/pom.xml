		<repository>
		   <id>rap-tabbed-properties</id>
		   <url>http://download.eclipse.org/rt/rap/incubator/nightly/tabbed-properties/</url>
		   <layout>p2</layout>
		</repository>
		<repository>
		   <id>rap-gef</id>
		   <url>http://download.eclipse.org/rt/rap/incubator/nightly/gef/</url>
		   <layout>p2</layout>
		</repository>
		<repository>
		   <id>rap-emf</id>
		   <url>http://download.eclipse.org/modeling/emf/emf/updates/2.12milestones/core/S201603210508/</url>
